<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="container_master">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="header_title" parent="margin_default_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_font_size_16_sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header_subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@dimen/default_weigth_0_5</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="input_number_decimal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@dimen/default_weigth_0_5</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="margin_default_row">
        <item name="android:layout_marginLeft">@dimen/default_16_dp</item>
        <item name="android:layout_marginRight">@dimen/default_16_dp</item>
    </style>


    <style name="divider" parent="margin_default_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_1_dp</item>
        <item name="android:background">#CCC</item>
        <item name="android:layout_marginTop">@dimen/default_12_dp</item>
        <item name="android:layout_marginBottom">@dimen/default_12_dp</item>
    </style>

    <style name="container_row" parent="margin_default_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="banner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_layout_heigth_180_dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/banner</item>
    </style>

    <style name="label_spent_footer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_weight">@dimen/default_weigth_0_5</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="value_spent_footer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_font_size_48_sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">@dimen/default_weigth_0_5</item>
    </style>

    <!-- FullScreen theme. -->
    <style name="FullScreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="button_default">
        <item name="android:layout_width">@dimen/default_280_dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_12_dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/button_shape</item>
    </style>

</resources>
